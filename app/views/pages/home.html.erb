<% content_for :title do %>
  <%= "Meetingspace, your best option for finding your space to work!" %>
<% end %>

<div class="banner">
  <div class="banner-content text-center">
    <h1>Find offices and meeting rooms to book for <br>the day or for company events</h1>
  </div>
</div>

