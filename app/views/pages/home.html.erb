</div>

<div class="container">
  <%= form_with url: offices_path, method: :get, class: "d-flex w-50 p-3 align-middle mx-auto" do %>
    <%= text_field_tag :query,params[:query], class: "form-control", placeholder: "Find spaces near #{@city}" %>
    <%= submit_tag "Search", class: "custom-button" %>
  <% end %>
  <div class="h-100 d-flex align-items-center justify-content-center">
    <%= link_to "View All", offices_path, class: "custom-button" %>
  </div>
</div>
